<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:visibility="gone"
        android:id="@+id/datetxt"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetxt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/message_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="dknwlk dl led "
            android:textSize="12dp"
            android:id="@+id/msg_date"
            android:textColor="@color/gray"
            android:layout_gravity="bottom"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgtxt"
            android:textSize="15dp"
            android:background="@drawable/d_round_my_background"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="Your message clwne eiw ewjdw efiwe dwoief ewifwe fowef weo"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_layout"
        android:textSize="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/message_seen"
        android:textColor="@color/gray"
        android:layout_marginRight="10dp"/>

</RelativeLayout>